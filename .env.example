# YouTube Utilities Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# YouTube Data API Configuration (required for markdown format with metadata)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Firecrawl API Configuration (required for web scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Default AI model for summarization
DEFAULT_MODEL=gpt-4o-mini

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=

# Processing Limits
MAX_TRANSCRIPT_LENGTH=800000

# Output Configuration
OUTPUT_FORMAT=text

# Prompts Configuration
PROMPTS_PATH=./prompts
